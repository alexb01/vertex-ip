---
const formspreeEndpoint = 'https://formspree.io/f/mbdlnbng';
---

<section id="contact" class="py-20 bg-[var(--color-bg)]">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
      Contact
    </h2>

    <p class="text-lg text-[var(--color-secondary)] text-center mb-10">
      Interested in working together? Get in touch.
    </p>

    <form action={formspreeEndpoint} method="POST" class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium text-[var(--color-primary)] mb-2">
          Name
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent transition-shadow bg-[var(--color-bg)]"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-[var(--color-primary)] mb-2">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent transition-shadow bg-[var(--color-bg)]"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-[var(--color-primary)] mb-2">
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent transition-shadow resize-y bg-[var(--color-bg)]"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full px-8 py-3 bg-[var(--color-accent)] text-white font-medium rounded-md hover:opacity-90 transition-opacity cursor-pointer"
      >
        Send Message
      </button>
    </form>

    <p class="text-center mt-8 text-[var(--color-secondary)]">
      Or email directly at{' '}
      <a href="mailto:alex@vertex-ip.com" class="text-[var(--color-accent)] hover:underline">
        alex@vertex-ip.com
      </a>
    </p>
  </div>
</section>
